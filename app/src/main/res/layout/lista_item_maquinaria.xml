<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="157dp"
            app:srcCompat="@mipmap/excavadoraoruga" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/viewNombre"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="test"
            android:textColor="#032478"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="365dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/viewCodigo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#002368" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="|"
                android:textColor="#FB0000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/viewCapacidad"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#002368" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="|"
                android:textColor="#FB0000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/viewPeso"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#002368" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="_____________________________________________"
            android:textColor="#86000000" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>